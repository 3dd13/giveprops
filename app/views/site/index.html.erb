<div class="container">
  <div class="jumbotron">
  	<h1>Recognise great work.</h1>
  	<h1>Give Props.</h1>
  </div>
  <div class="jumbotron jumbo-white">
  	<% unless current_user %>
  	<button class="btn btn-lg" id="register-btn">Register Now</button>
  	<div id="register-form">
	  	<%= form_for("user", :url => user_registration_path) do |f| %>	
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, :autofocus => true %></div>

			  <div><%= f.label :password %><br />
			  <%= f.password_field :password %></div>

			  <div><%= f.label :password_confirmation %><br />
			  <%= f.password_field :password_confirmation %></div>

			  <div><%= f.submit "Sign up" %></div>
			<% end %>
		</div>

  	<p>or <% end %>search our lists:</p>
  	<form class="form-inline" role="form">
		  <div class="form-group">
		  	<label>Choose a Profession...</label>
		    <select class="form-control" required>
				  <option>Actor</option>
				  <option>Writer</option>
				  <option>Comedian</option>
				  <option>Guitarist</option>
				  <option>Web Developer</option>
				</select>
		  </div>
		  <div class="form-group">
		  	<label>Choose a Location...</label>
		    <select class="form-control" required>
				  <option>London</option>
				  <option>Hong Kong</option>
				  <option>New York</option>
				  <option>Paris</option>
				  <option>San Fransisco</option>
				</select>
		  </div>
		  <div class="form-group">
			  <button type="submit" class="btn btn-lg btn-success">Search</button>
			</div>
		</form>
  </div>
</div>
